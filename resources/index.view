  <text id="day" />

  <!-- デジタル時刻表示 -->
  <text id="time" />
  

  <!-- 秒インダイヤル -->
  <section class="indial-seconds">
    <!-- 外周円 -->
    <arc class="indial-seconds-outer-circle" />
    <!-- 秒インダイヤル本体 -->
    <arc id="secs_indial" />
    <!-- 秒文字列 -->
    <text id="secs_text" />
  </section>

  <!-- 歩数印ダイアル -->
  <section class="indial-steps">
    <!-- 外周円 -->
    <arc class="indial-steps-outer-circle" />
    <!-- 歩数進捗円弧 -->
    <arc id="steps_progress" />
    <!-- 歩数アイコン -->
    <image x="0" y="0" widht="36" height="36" href="steps_36px.png" />
    <!-- 歩数表示 -->
    <text id="steps_text" />
  </section>

  <!-- バッテリー表示 -->
  <section class="battery">
    <arc />
    <arc id="battery" />
  </section>


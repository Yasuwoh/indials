  <!-- 針 -->
  <!-- 分針 -->
  <g id="minute-hand" pointer-events="visible" transform="translate(50%,50%)">
    <rect x="-4" y="-40%" width="8" height="40%+20" fill="greenyellow" />
    <line x1="-4" y1="-40%" x2="0" y2="-45%" fill="greenyellow" stroke-width="2" />
    <line x1="3" y1="-40%" x2="0" y2="-45%" fill="greenyellow" stroke-width="2" />
  </g>
  <!-- 時針 -->
  <g id="hour-hand" pointer-events="visible" transform="translate(50%,50%)">
    <rect />
  </g>
  <!-- 秒針 -->
  <g id="second-hand" pointer-events="visible" transform="translate(50%,50%)">
    <rect />
  </g>
  <!-- 針の軸 -->
  <circle class="hand-axis" />


  <!-- 日付と曜日 -->
